generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  name         String
  image        String
  messageLimit Int      @default(10)
  csvs         Csv[]
  createdAt    DateTime @default(now())
  Chat         Chat[]
}

model Csv {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fileName    String
  name        String
  description String
  status      String
  columns     Column[]
  createdAt   DateTime @default(now())
  User        User     @relation(fields: [userId], references: [id])
  userId      String   @db.ObjectId
  Chat        Chat[]
}

model Column {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  type  String
  Csv   Csv    @relation(fields: [csvId], references: [id])
  csvId String @db.ObjectId
}

model Chat {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  createdAt DateTime  @default(now())
  User      User      @relation(fields: [userId], references: [id])
  userId    String    @db.ObjectId
  messages  Message[]
  csv       Csv       @relation(fields: [csvId], references: [id])
  csvId     String    @db.ObjectId
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  role      String
  message   String
  sql       String?  @default("")
  table     String?  @default("")
  summary   String?  @default("")
  createdAt DateTime @default(now())
  Chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String   @db.ObjectId
}
